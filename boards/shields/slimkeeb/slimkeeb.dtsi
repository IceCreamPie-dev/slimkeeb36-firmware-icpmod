#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,physical-layout = &physical_layout0;
    };

    key_physical_attrs: key_physical_attrs {
        compatible = "zmk,key-physical-attrs";
        #key-cells = <7>; /* x, y, w, h, rx, ry, rz */
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <8>;
        rows = <5>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(1,2) RC(0,3)   RC(0,7) RC(1,6) RC(0,6) RC(0,5) RC(0,4)
            RC(1,0) RC(3,0) RC(3,1) RC(3,2) RC(1,3)   RC(1,7) RC(3,6) RC(3,5) RC(3,4) RC(1,4)
            RC(2,0) RC(1,1) RC(2,1) RC(2,2) RC(2,3)   RC(2,7) RC(2,6) RC(2,5) RC(1,5) RC(2,4)
                            RC(4,2) RC(4,1) RC(4,0)   RC(4,4) RC(4,5) RC(4,6)
        >;
    };

    layouts {
        compatible = "zmk,physical-layout-list";

        physical_layout0: physical_layout_0 {
            compatible = "zmk,physical-layout";
            display-name = "Compact Layout";
            transform = <&default_transform>;
            
            /* * 수정 사항:
             * 1. 키 크기(W, H)를 1900 -> 1800으로 변경 (시각적 여백 생성)
             * 2. 오른쪽 유닛(Right Hand)의 X좌표를 -4000만큼 이동 (가운데로 모음)
             */
            keys = 
                /* --- Left Hand (Top Row) --- */
                <&key_physical_attrs 0    950 1800 1800 0 0 0>,
                <&key_physical_attrs 1900 250 1800 1800 0 0 0>,
                <&key_physical_attrs 3800   0 1800 1800 0 0 0>,
                <&key_physical_attrs 5700 250 1800 1800 0 0 0>,
                <&key_physical_attrs 7600 250 1800 1800 0 0 0>,

                /* --- Right Hand (Top Row) --- */
                /* 기존 15200 -> 11200 (4000만큼 당김) */
                <&key_physical_attrs 11200 250 1800 1800 0 0 0>,
                <&key_physical_attrs 13100 250 1800 1800 0 0 0>,
                <&key_physical_attrs 15000   0 1800 1800 0 0 0>,
                <&key_physical_attrs 16900 250 1800 1800 0 0 0>,
                <&key_physical_attrs 18800 950 1800 1800 0 0 0>,

                /* --- Left Hand (Middle Row) --- */
                <&key_physical_attrs 0    2850 1800 1800 0 0 0>,
                <&key_physical_attrs 1900 2150 1800 1800 0 0 0>,
                <&key_physical_attrs 3800 1900 1800 1800 0 0 0>,
                <&key_physical_attrs 5700 2150 1800 1800 0 0 0>,
                <&key_physical_attrs 7600 2150 1800 1800 0 0 0>,

                /* --- Right Hand (Middle Row) --- */
                <&key_physical_attrs 11200 2150 1800 1800 0 0 0>,
                <&key_physical_attrs 13100 2150 1800 1800 0 0 0>,
                <&key_physical_attrs 15000 1900 1800 1800 0 0 0>,
                <&key_physical_attrs 16900 2150 1800 1800 0 0 0>,
                <&key_physical_attrs 18800 2850 1800 1800 0 0 0>,

                /* --- Left Hand (Bottom Row) --- */
                <&key_physical_attrs 0    4750 1800 1800 0 0 0>,
                <&key_physical_attrs 1900 4050 1800 1800 0 0 0>,
                <&key_physical_attrs 3800 3800 1800 1800 0 0 0>,
                <&key_physical_attrs 5700 4050 1800 1800 0 0 0>,
                <&key_physical_attrs 7600 4050 1800 1800 0 0 0>,

                /* --- Right Hand (Bottom Row) --- */
                <&key_physical_attrs 11200 4050 1800 1800 0 0 0>,
                <&key_physical_attrs 13100 4050 1800 1800 0 0 0>,
                <&key_physical_attrs 15000 3800 1800 1800 0 0 0>,
                <&key_physical_attrs 16900 4050 1800 1800 0 0 0>,
                <&key_physical_attrs 18800 4750 1800 1800 0 0 0>,

                /* --- Left Thumb Cluster --- */
                <&key_physical_attrs 4100 6000 1800 1800 0 0 0>,
                <&key_physical_attrs 6000 6200 1800 1800 0 0 0>,
                <&key_physical_attrs 7900 6200 1800 1800 0 0 0>,

                /* --- Right Thumb Cluster --- */
                /* 엄지 위치도 -4000 이동 */
                <&key_physical_attrs 10900 6200 1800 1800 0 0 0>,
                <&key_physical_attrs 12800 6200 1800 1800 0 0 0>,
                <&key_physical_attrs 14700 6000 1800 1800 0 0 0>;
        };
    };
};

&uicr {
    nfct-pins-as-gpios;
};
