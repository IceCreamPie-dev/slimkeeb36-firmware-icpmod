#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,physical-layout = &physical_layout0;
    };

    /* * layouts.dtsi 파일을 찾지 못하는 캐시 문제를 피하기 위해
     * 여기에 직접 정의합니다.
     */
    key_physical_attrs: key_physical_attrs {
        compatible = "zmk,key-physical-attrs";
        #binding-cells = <4>; /* x, y, w, h (4개 인자) */
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <8>;
        rows = <5>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(1,2) RC(0,3)   RC(0,7) RC(1,6) RC(0,6) RC(0,5) RC(0,4)
            RC(1,0) RC(3,0) RC(3,1) RC(3,2) RC(1,3)   RC(1,7) RC(3,6) RC(3,5) RC(3,4) RC(1,4)
            RC(2,0) RC(1,1) RC(2,1) RC(2,2) RC(2,3)   RC(2,7) RC(2,6) RC(2,5) RC(1,5) RC(2,4)
                            RC(4,2) RC(4,1) RC(4,0)   RC(4,4) RC(4,5) RC(4,6)
        >;
    };

    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
        transform = <&default_transform>;
        keys =  // --- Top Row ---
                // Left Hand (0-4)
                <&key_physical_attrs 0 0 1900 1900>,
                <&key_physical_attrs 1900 0 1900 1900>,
                <&key_physical_attrs 3800 0 1900 1900>,
                <&key_physical_attrs 5700 0 1900 1900>,
                <&key_physical_attrs 7600 0 1900 1900>,
                // Right Hand (5-9)
                <&key_physical_attrs 12500 0 1900 1900>,
                <&key_physical_attrs 14400 0 1900 1900>,
                <&key_physical_attrs 16300 0 1900 1900>,
                <&key_physical_attrs 18200 0 1900 1900>,
                <&key_physical_attrs 20100 0 1900 1900>,

                // --- Middle Row ---
                // Left Hand (10-14)
                <&key_physical_attrs 0 1900 1900 1900>,
                <&key_physical_attrs 1900 1900 1900 1900>,
                <&key_physical_attrs 3800 1900 1900 1900>,
                <&key_physical_attrs 5700 1900 1900 1900>,
                <&key_physical_attrs 7600 1900 1900 1900>,
                // Right Hand (15-19)
                <&key_physical_attrs 12500 1900 1900 1900>,
                <&key_physical_attrs 14400 1900 1900 1900>,
                <&key_physical_attrs 16300 1900 1900 1900>,
                <&key_physical_attrs 18200 1900 1900 1900>,
                <&key_physical_attrs 20100 1900 1900 1900>,

                // --- Bottom Row ---
                // Left Hand (20-24)
                <&key_physical_attrs 0 3800 1900 1900>,
                <&key_physical_attrs 1900 3800 1900 1900>,
                <&key_physical_attrs 3800 3800 1900 1900>,
                <&key_physical_attrs 5700 3800 1900 1900>,
                <&key_physical_attrs 7600 3800 1900 1900>,
                // Right Hand (25-29)
                <&key_physical_attrs 12500 3800 1900 1900>,
                <&key_physical_attrs 14400 3800 1900 1900>,
                <&key_physical_attrs 16300 3800 1900 1900>,
                <&key_physical_attrs 18200 3800 1900 1900>,
                <&key_physical_attrs 20100 3800 1900 1900>,

                // --- Thumb Cluster ---
                // Left Thumbs (30-32)
                <&key_physical_attrs 3800 5700 1900 1900>,
                <&key_physical_attrs 5700 5700 1900 1900>,
                <&key_physical_attrs 7600 5700 1900 1900>,
                // Right Thumbs (33-35)
                <&key_physical_attrs 12500 5700 1900 1900>,
                <&key_physical_attrs 14400 5700 1900 1900>,
                <&key_physical_attrs 16300 5700 1900 1900>;
    };
};

&uicr {
    nfct-pins-as-gpios;
};
