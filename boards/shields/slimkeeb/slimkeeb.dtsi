#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,physical-layout = &physical_layout0;
    };

    /* 표준 7인자 속성 정의 */
    key_physical_attrs: key_physical_attrs {
        compatible = "zmk,key-physical-attrs";
        #key-cells = <7>;
    };

    /* 하드웨어 매트릭스 연결 (변경 없음) */
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <8>;
        rows = <5>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(1,2) RC(0,3)   RC(0,7) RC(1,6) RC(0,6) RC(0,5) RC(0,4)
            RC(1,0) RC(3,0) RC(3,1) RC(3,2) RC(1,3)   RC(1,7) RC(3,6) RC(3,5) RC(3,4) RC(1,4)
            RC(2,0) RC(1,1) RC(2,1) RC(2,2) RC(2,3)   RC(2,7) RC(2,6) RC(2,5) RC(1,5) RC(2,4)
                            RC(4,2) RC(4,1) RC(4,0)   RC(4,4) RC(4,5) RC(4,6)
        >;
    };

    /* 레이아웃 목록 컨테이너 */
    layouts {
        compatible = "zmk,physical-layout-list";

        /* 표준 Corne 36키 레이아웃 좌표 적용 */
        physical_layout0: physical_layout_0 {
            compatible = "zmk,physical-layout";
            display-name = "Corne 36 Layout";
            transform = <&default_transform>;
            
            keys = 
                /* Left Hand - Top Row */
                <&key_physical_attrs 0 0 1900 1900 0 0 0>,
                <&key_physical_attrs 1900 0 1900 1900 0 0 0>,
                <&key_physical_attrs 3800 0 1900 1900 0 0 0>,
                <&key_physical_attrs 5700 0 1900 1900 0 0 0>,
                <&key_physical_attrs 7600 0 1900 1900 0 0 0>,

                /* Right Hand - Top Row */
                <&key_physical_attrs 13300 0 1900 1900 0 0 0>,
                <&key_physical_attrs 15200 0 1900 1900 0 0 0>,
                <&key_physical_attrs 17100 0 1900 1900 0 0 0>,
                <&key_physical_attrs 19000 0 1900 1900 0 0 0>,
                <&key_physical_attrs 20900 0 1900 1900 0 0 0>,

                /* Left Hand - Middle Row */
                <&key_physical_attrs 0 1900 1900 1900 0 0 0>,
                <&key_physical_attrs 1900 1900 1900 1900 0 0 0>,
                <&key_physical_attrs 3800 1900 1900 1900 0 0 0>,
                <&key_physical_attrs 5700 1900 1900 1900 0 0 0>,
                <&key_physical_attrs 7600 1900 1900 1900 0 0 0>,

                /* Right Hand - Middle Row */
                <&key_physical_attrs 13300 1900 1900 1900 0 0 0>,
                <&key_physical_attrs 15200 1900 1900 1900 0 0 0>,
                <&key_physical_attrs 17100 1900 1900 1900 0 0 0>,
                <&key_physical_attrs 19000 1900 1900 1900 0 0 0>,
                <&key_physical_attrs 20900 1900 1900 1900 0 0 0>,

                /* Left Hand - Bottom Row */
                <&key_physical_attrs 0 3800 1900 1900 0 0 0>,
                <&key_physical_attrs 1900 3800 1900 1900 0 0 0>,
                <&key_physical_attrs 3800 3800 1900 1900 0 0 0>,
                <&key_physical_attrs 5700 3800 1900 1900 0 0 0>,
                <&key_physical_attrs 7600 3800 1900 1900 0 0 0>,

                /* Right Hand - Bottom Row */
                <&key_physical_attrs 13300 3800 1900 1900 0 0 0>,
                <&key_physical_attrs 15200 3800 1900 1900 0 0 0>,
                <&key_physical_attrs 17100 3800 1900 1900 0 0 0>,
                <&key_physical_attrs 19000 3800 1900 1900 0 0 0>,
                <&key_physical_attrs 20900 3800 1900 1900 0 0 0>,

                /* Left Hand - Thumb Cluster */
                <&key_physical_attrs 3800 5700 1900 1900 0 0 0>,
                <&key_physical_attrs 5700 5700 1900 1900 0 0 0>,
                <&key_physical_attrs 7600 5700 1900 1900 0 0 0>,

                /* Right Hand - Thumb Cluster */
                <&key_physical_attrs 13300 5700 1900 1900 0 0 0>,
                <&key_physical_attrs 15200 5700 1900 1900 0 0 0>,
                <&key_physical_attrs 17100 5700 1900 1900 0 0 0>;
        };
    };
};

&uicr {
    nfct-pins-as-gpios;
};
